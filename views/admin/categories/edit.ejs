<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>

<div class="container">
    <div class="card mt-3">
        <div class="card-header">
            <h2>Edição de Categoria</h2>
        </div>
        <div class="card-body">
            <form action="/categories/update" method="POST">
                <input type="text" name="title" placeholder="Defina o título da categoria" class="form-control" value="<%= category.title %>">
                <input type="hidden" name="id" value="<%= category.id %>">
                <button class="btn btn-dark mt-2">Atualizar</button>
            </form>
        </div>
    </div>
</div>

