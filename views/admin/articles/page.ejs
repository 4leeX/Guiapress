<%- include('../../partials/header.ejs') %>
<%- include('../../partials/homenavbar.ejs') %>

<body>
    <br>
    <div class="container">
        
        <% result.articles.rows.forEach(article =>{ %>
            <div class="card">
                <div class="card-header">
                    <%= article.title %>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-dark">Ler Artigo</a>
                </div>
            </div>
            <br>
        <% }) %>

        <div class="row">
            <div class="col col-12">

                <% if(result.page > 2){ %>
                    <a href="<%= result.page - 1 %>"><< Prev</a>
                <% } else if(result.page == 2){ %>
                    <a href="/"><< Prev</a>
                <% } %>


                <% if(result.next){ %>
                    <a href="<%= result.page + 1 %>" style="float:right">Next >></a>
                <% } %>
            </div>
        </div>
        <hr>

    </div>
</body>

