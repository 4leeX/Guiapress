<%- include('./partials/header.ejs') %>
<%- include('./partials/homenavbar.ejs') %>

<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4">Bem-vindo!</h1>
            <p class="lead">Simples Blog</p>
            <hr class="my-4">
            <p class="lead">
              <a class="btn btn-dark btn-sm" href="#" role="button">Learn more</a>
            </p>
          </div>
        <hr>
        <% articles.forEach(article =>{ %>
            <div class="card">
                <div class="card-header">
                    <%= article.title %>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-dark">Ler Artigo</a>
                </div>
            </div>
            <br>
        <% }) %>

        <div class="row">
            <div class="col col-12">
                <a href="articles/page/2" style="float:right">Next >></a>
            </div>
        </div>
        <hr>

    </div>
</body>

